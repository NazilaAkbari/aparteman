<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.andriod.darol.darolandroidapp.activity.LoginActivity">

    <Button
        android:text="@string/building_code_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:id="@+id/buildingCodeButton"
        android:onClick="openEnterCodeDialog"/>

    <Button
        android:text="@string/register_building"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buildingCodeButton"
        android:layout_alignRight="@+id/buildingCodeButton"
        android:layout_alignEnd="@+id/buildingCodeButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/registerBuildingButton" />

    <Button
        android:text="@string/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/signInButton"
        android:layout_below="@+id/registerBuildingButton"
        android:layout_alignRight="@+id/registerBuildingButton"
        android:layout_alignEnd="@+id/registerBuildingButton"
        android:layout_alignLeft="@+id/registerBuildingButton"
        android:layout_alignStart="@+id/registerBuildingButton"
        android:onClick="openSignInDialog"/>
</RelativeLayout>
